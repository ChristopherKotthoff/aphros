.POSIX:
.SUFFIXES:
.SUFFIXES: .o .cpp .c
L = libaphros_static.a
J = libaphros_js.a
CXX = g++
CC = c99
LINK = $(CXX)
CXXFLAGS = -O2 -g
CFLAGS = -O2 -g
CXXFLAGS_STD = -std=c++14
1 = \
-D_ALIGNBYTES_=16 \
-D_USE_AMGX_=0 \
-D_USE_AVX_=0 \
-D_USE_BACKEND_CUBISM_=0 \
-D_USE_BACKEND_LOCAL_=1 \
-D_USE_BACKEND_NATIVE_=0 \
-D_USE_DIM1_=0 \
-D_USE_DIM2_=0 \
-D_USE_DIM3_=1 \
-D_USE_DIM4_=0 \
-D_USE_FPZIP_=0 \
-D_USE_HDF_=0 \
-D_USE_HYPRE_=0 \
-D_USE_MPI_=0 \
-D_USE_OPENMP_=1 \
-D_USE_OVERLAP_=0 \

all: $L ap.mfer
include ../make/obj.mk
include ../make/dir.mk
include ../make/hdr.mk
$L: $O; ar rv $@ $O && ranlib $@
$J: $O; emar rv $@ $O
ap.mfer: main.o $L; $(LINK) $< $(LDFLAGS) $L -o $@
.cpp.o:; $(CXX) $< -c $(CXXFLAGS) $(CXXFLAGS_STD) -I. $1 -o $@
.c.o:; $(CC) $< -c $(CFLAGS) -o $@
util/gitgen.cpp:; ./gitrev $@
install: $L ap.mfer
	mkdir -p "$(APHROS_PREFIX)"/lib; \
	mkdir -p "$(APHROS_PREFIX)"/bin; \
	mkdir -p "$(APHROS_PREFIX)"/include/aphros; \
	for i in $D; \
	do mkdir -p "$(APHROS_PREFIX)"/include/aphros/$$i; \
	done; \
	for i in $H; \
	do cp $$i "$(APHROS_PREFIX)"/include/aphros/$$i; \
	done; \
	cp $L "$(APHROS_PREFIX)"/lib/; \
	cp ap.mfer "$(APHROS_PREFIX)"/bin
install_js: $J
	mkdir -p "$(APHROS_PREFIX)"/lib; \
	cp $J "$(APHROS_PREFIX)"/lib/
clean:
	-rm $O $L $J ap.mfer
include ../make/dep.mk
