.POSIX:
.SUFFIXES:
S = .
B = .
L = libaphros_static.a
J = libaphros_js.a
CXX = g++
CC = c99
LINK = $(CXX)
CXXFLAGS = -O2 -g
CFLAGS = -O2 -g
CXXFLAGS_STD = -std=c++14
CC_RULE = $(CC) $< -c $(CFLAGS) -o $@
CXX_RULE = $(CXX) $< -c $(CXXFLAGS) $(CXXFLAGS_STD) -I$S $1 -o $@
1 = \
-D_ALIGNBYTES_=16 \
-D_USE_AMGX_=0 \
-D_USE_AVX_=0 \
-D_USE_BACKEND_CUBISM_=0 \
-D_USE_BACKEND_LOCAL_=1 \
-D_USE_BACKEND_NATIVE_=1 \
-D_USE_DIM1_=0 \
-D_USE_DIM2_=1 \
-D_USE_DIM3_=1 \
-D_USE_DIM4_=0 \
-D_USE_FPZIP_=0 \
-D_USE_HDF_=0 \
-D_USE_HYPRE_=0 \
-D_USE_MPI_=0 \
-D_USE_OPENMP_=1 \
-D_USE_OVERLAP_=0 \

all: $B/$L $B/ap.mfer
include $S/../make/obj.mk
include $S/../make/dir.mk
include $S/../make/hdr.mk
include $S/../make/rule.mk
$B/$L: $O; ar rv $@ $O && ranlib $@
$B/$J: $O; emar rv $@ $O
$B/ap.mfer: $B/main.o $B/$L; $(LINK) $< $(LDFLAGS) $B/$L -o $@
$S/util/gitgen.cpp:; $S/gitrev $@
install: $B/$L $B/ap.mfer
	mkdir -p "$(APHROS_PREFIX)"/lib; \
	mkdir -p "$(APHROS_PREFIX)"/bin; \
	mkdir -p "$(APHROS_PREFIX)"/include/aphros; \
	for i in $D; \
	do mkdir -p "$(APHROS_PREFIX)"/include/aphros/$$i; \
	done; \
	for i in $H; \
	do cp $$i "$(APHROS_PREFIX)"/include/aphros/$$i; \
	done; \
	cp $B/$L "$(APHROS_PREFIX)"/lib/; \
	cp $B/ap.mfer "$(APHROS_PREFIX)"/bin
install_js: $J
	mkdir -p "$(APHROS_PREFIX)"/lib; \
	cp $J "$(APHROS_PREFIX)"/lib/
clean:
	-rm $O $B/$L $B/$J $B/ap.mfer
include $S/../make/dep.mk
