#!/bin/sh

find . -name '*.cpp' -or -name '*.c' | awk '
BEGIN {
    print "O = \\"
    skip["linear/hypre.cpp"]
    skip["linear/linear_amgx.cpp"]
    skip["main.cpp"]
    skip["overlap/overlap.cpp"]
}
{ sub(/^\.\//, "") }
($0 in skip) || /^test\// { next }
{
    sub(/\.cpp$/, ".o")
    sub(/\.c$/, ".o")
    print $0 "\\" | "sort"
}

END {
    close("sort")
    printf "\n"
}

'
